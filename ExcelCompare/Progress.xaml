<Window x:Class="ExcelCompare.Progress"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExcelCompare"
      mc:Ignorable="d" 
     Height="20" Width="400"
     WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <ProgressBar Maximum="100" Minimum="0" Width="400"  Height="20" Name="progressbar"/>
        <Label Height="20" FontSize="9" Name="detail" HorizontalAlignment="Center"/>
    </Grid>
</Window>
